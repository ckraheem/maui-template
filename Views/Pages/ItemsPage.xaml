<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiTemplate.ViewModels"
             xmlns:model="clr-namespace:MauiTemplate.Models"
             x:Class="MauiTemplate.Views.Pages.ItemsPage"
             x:DataType="vm:ItemsViewModel"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" 
                     Command="{Binding AddItemCommand}"
                     IconImageSource="{FontImage Glyph='+', Size=24}"/>
    </ContentPage.ToolbarItems>

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        
        <CollectionView ItemsSource="{Binding Items}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedItem}"
                        SelectionChangedCommand="{Binding ItemSelectedCommand}">
            
            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="30" 
                                   VerticalOptions="Center" 
                                   HorizontalOptions="Center">
                    <Label Text="No items found"
                           FontSize="20"
                           TextColor="{StaticResource Gray600}"
                           HorizontalOptions="Center"/>
                    <Label Text="Pull to refresh or tap + to add"
                           FontSize="14"
                           TextColor="{StaticResource Gray500}"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ListItem">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                          BackgroundColor="Red"
                                          IconImageSource="{FontImage Glyph='ðŸ—‘', Size=24}"/>
                            </SwipeItems>
                        </SwipeView.RightItems>
                        
                        <Border StrokeThickness="0"
                                Margin="10,5"
                                BackgroundColor="{StaticResource Gray100}"
                                StrokeShape="RoundRectangle 10">
                            <Grid Padding="15" ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                                
                                <Border StrokeThickness="0"
                                       Grid.Column="0"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       StrokeShape="RoundRectangle 10"
                                       BackgroundColor="{StaticResource Primary}">
                                    <Label Text="ðŸ“¦"
                                          FontSize="30"
                                          HorizontalOptions="Center"
                                          VerticalOptions="Center"/>
                                </Border>
                                
                                <VerticalStackLayout Grid.Column="1" 
                                                   VerticalOptions="Center"
                                                   Spacing="5">
                                    <Label Text="{Binding Title}"
                                          FontSize="16"
                                          FontAttributes="Bold"/>
                                    <Label Text="{Binding Description}"
                                          FontSize="13"
                                          TextColor="{StaticResource Gray600}"
                                          LineBreakMode="TailTruncation"
                                          MaxLines="2"/>
                                    <Label Text="{Binding UpdatedAt, StringFormat='Updated: {0:MMM dd, yyyy}'}"
                                          FontSize="11"
                                          TextColor="{StaticResource Gray500}"/>
                                </VerticalStackLayout>
                                
                                <Label Grid.Column="2"
                                      Text="â€º"
                                      FontSize="24"
                                      TextColor="{StaticResource Gray400}"
                                      VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
    
</ContentPage>
