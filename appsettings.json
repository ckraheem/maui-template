{
  "App": {
    "Name": "MAUI Template",
    "Version": "1.0.0",
    "Environment": "Development"
  },
  "Api": {
    "BaseUrl": "https://api.example.com/",
    "Timeout": 30,
    "RetryCount": 3
  },
  "Authentication": {
    "TokenRefreshBeforeExpiry": 5,
    "Providers": {
      "AzureAd": {
        "Enabled": false,
        "TenantId": "your-tenant-id",
        "ClientId": "your-client-id",
        "RedirectUri": "mauitemplate://auth/callback"
      },
      "Auth0": {
        "Enabled": false,
        "Domain": "your-domain.auth0.com",
        "ClientId": "your-client-id",
        "Audience": "your-api-identifier"
      },
      "Jwt": {
        "Enabled": true,
        "Issuer": "your-issuer",
        "Audience": "your-audience"
      }
    }
  },
  "Database": {
    "Name": "mauitemplate.db3",
    "EnableWAL": true
  },
  "Logging": {
    "Level": "Information",
    "RetainDays": 7,
    "FileSize": 10485760
  },
  "Features": {
    "OfflineMode": true,
    "Analytics": false,
    "CrashReporting": false
  }
}
